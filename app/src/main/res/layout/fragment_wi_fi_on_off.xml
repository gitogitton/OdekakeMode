<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myappl.odekakemode.MainActivity">

    <TextView
        android:id="@+id/subTitle_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:text="@string/sub_title01"
        android:textSize="35sp" />

    <ToggleButton
        android:id="@+id/toggleWiFiOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subTitle_wifi"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/subTitle_wifi"
        android:text="@string/togleWiFi" />

    <TextView
        android:id="@+id/message_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subTitle_wifi"
        android:layout_below="@+id/subTitle_wifi"
        android:text="@string/wifi"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/titleVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subTitle_wifi"
        android:layout_below="@id/message_01"
        android:layout_marginTop="20dp"
        android:text="音量"
        android:textSize="35sp" />

    <ToggleButton
        android:id="@+id/toggleVolumeOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/titleVolume"
        android:layout_below="@id/message_01"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="ON" />

    <TextView
        android:id="@+id/message_volume"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subTitle_wifi"
        android:layout_below="@id/titleVolume"
        android:text="@string/volume"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
